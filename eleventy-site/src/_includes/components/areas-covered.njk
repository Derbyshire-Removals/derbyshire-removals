<section class="py-16 bg-gray-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">Areas We Cover</h2>
    <p class="text-center text-gray-600 mb-10">We provide professional removal services throughout Derbyshire and beyond</p>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 text-center">
      {% for area in locations.allAreas %}
        {% if loop.index <= 10 %}
          <a href="{{ area.link }}" class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <h3 class="font-semibold text-primary">{{ area.name }}</h3>
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <div class="mt-10 text-center">
      <a href="/areas-we-cover/" class="inline-flex items-center bg-primary text-white py-2 px-4 rounded-md hover:bg-opacity-90 transition-colors">
        View All Areas
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>
