  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}">
  <meta name="keywords" content="{{ keywords }}">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://derbyshireremovals.com{{ page.url }}">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:image" content="https://derbyshireremovals.com{{ ogImage | default('/og-image.png') }}">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ description }}">
  <meta name="twitter:image" content="https://derbyshireremovals.com{{ ogImage | default('/og-image.png') }}">

  <!-- Canonical URL -->
  <link rel="canonical" href="https://derbyshireremovals.com{{ page.url }}">

  <!-- Favicon -->
  <link rel="icon" href="/favicon.ico">

  <!-- CSS -->
  <link rel="stylesheet" href="/styles/tailwind.css">

  <script defer src="/js/stats.js" data-website-id="9c64cef6-1510-453c-9019-c9b431b31ea7"></script>


  <!-- Additional head content -->
  {% block head %}{% endblock %}
</head>
<body>
  <!-- Header -->
  {% include "partials/header.njk" %}

  <!-- Main content -->
  <main>
    {% block content %}{{ content | safe }}{% endblock %}
  </main>

  <!-- Footer -->
  {% include "partials/footer.njk" %}

  <!-- Scripts -->
  <script src="/js/main.js" defer></script>
  
  <!-- All pages - lightweight Google Ads tracking -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=AW-1693185269"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'AW-1693185269');
  </script>

  <!-- Additional scripts -->
  {% if additionalScripts %}
    {{ additionalScripts | safe }}
  {% endif %}
</body>
</html>
